<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyecto_final">
    <!--
        Los permisos de android se listan en este archivo desde la
        etiqueta manifest

        Para indicar que los servicios carecen de certificado
        indicamos una conexión plana de nuestra app
        android:usesCleartextTraffic="true"
    -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_Final"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".pub.PublicActivity"
            android:exported="true"
            android:label="GAME STORE">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HistorialActivity"
            android:exported="false"
            android:label="Historial" />
        <activity
            android:name=".FavoritoActivity"
            android:exported="false"
            android:label="Lista de deseos" />
        <activity
            android:name=".CarritoActivity"
            android:exported="false"
            android:label="Mi carrito" />
        <activity
            android:name=".PerfilActivity"
            android:exported="false"
            android:label="Mi perfil" />
        <activity
            android:name=".SesionActivity"
            android:exported="false"
            android:label="Sesión" />
        <activity
            android:name=".Catalogo2Activity"
            android:exported="false"
            android:label="Productos" />
        <activity
            android:name=".RegistroActivity"
            android:exported="false"
            android:label="Registro" />
        <activity
            android:name=".CatalogoActivity"
            android:exported="false"
            android:label="Productos">
        </activity>
    </application>

</manifest>